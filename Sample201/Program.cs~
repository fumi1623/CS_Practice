using System;

namespace Sample201 {
    class Program {
        static void Main(string[] args) {
            Console.WriteLine("{0} + {1} = {2}", 5, 2, 5 + 2);
            Console.WriteLine("{0} - {1} = {2}", 5, 2, 5 - 2);
            Console.WriteLine("{0} * {1} = {2}", 5, 2, 5 * 2);
            Console.WriteLine("{0} / {1} = {2}　余り　{3}", 5, 2, 5 / 2, 5 % 2);
        }
    }
}
